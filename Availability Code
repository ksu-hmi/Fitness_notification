#check Webscrape file for more about bs4 aka BeautifulSoup4 
import bs4, requests, smtplib

# ------------------- E-mail list ------------------------
toAddress = ['example1@email.com','example2@email.com']
# --------------------------------------------------------

#Download page
getPage = requests.get("https://www.onelifefitness.com/gyms/atlanta-holly-springs?hsLang=en")
getPage.raise_for_status() #if error it will stop the program

#Parse text for foods
menu = bs4.BeautifulSoup(getPage.text, 'html.parser')
activity = menu.select('.classname')

the_one = 'pilates' # This is the name of the class you are looking for
flength = len(the_one)
available = False

#Creating loop to determine if desired class is available for today. Additional code could be added if multiple classes are desired. 
for class in classes:
    for i in range(len(class.text)):
        chunk = class.text[i:i+flength].lower()
        if chunk == the_one:
            available = True

if available == True:
    conn = smtplib.SMTP('smtp.gmail.com', 587) # smtp address and port
    conn.ehlo() # call this to start the connection
    conn.starttls() # starts tls encryption. When we send our password it will be encrypted.
    conn.login('youremail@gmail.com, 'appkey')
    conn.sendmail('youremail@gmail.com', toAddress, 'Subject: Borzaska Alert!\n\nAttention!\n\nYour desired class is available today!\n\nEnjoy!:\nClass Notifier V1.0')
    conn.quit()
    print('Sent notificaton e-mails for the following recipients:\n')
    for i in range(len(toAddress)):
        print(toAddress[i])
    print('')
else:
    print('Your desired class is not available today.')
